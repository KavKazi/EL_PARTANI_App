<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addTecherForAdmin"
    android:background="@color/backgroundcolor">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="admin main screen "
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ETnewTecherName"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:background="@drawable/edit_text_bg"
        android:hint="   GO TO ADD TECHER SCREEN: "
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <EditText
        android:id="@+id/ETnewTecherClass"
        android:layout_width="306dp"
        android:layout_height="59dp"
        android:background="@drawable/edit_text_bg"
        android:hint="    GO TO ADD PROFESSION SCREEN : "
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476" />

    <EditText
        android:id="@+id/ETnewTecherAvatar"
        android:layout_width="310dp"
        android:layout_height="58dp"
        android:background="@drawable/edit_text_bg"
        android:hint=" GO TO ADD PRIVATE HOUR SCREEN:"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699" />

    <Button
        android:id="@+id/btn_goToAddPrivateHourScreen"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/bg_dialog"
        android:text="GO TO APHS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_goToAddTecharScreen"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="424dp"
        android:backgroundTint="@color/bg_dialog"
        android:text="GO TO ATS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_goToAddProfessionScreen"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="276dp"
        android:backgroundTint="@color/bg_dialog"
        android:text="GO TO APS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>